{
  "manifest_version": 3,
  "name": "yt2mp3",
  "description": "Download YouTube videos as MP3 files directly from YouTube, with ability to write MP3 metadata tags to file, such as cover artwork.",
  "version": "1.0",

  "icons": {
    "64": "icon.png"
  },

  "content_scripts": [
    {
      "matches": [
        "https://youtube.com/*",
        "http://youtube.com/*",
        "http://www.youtube.com/*",
        "https://www.youtube.com/*"
      ],
      "js": [
        "script.js"
      ]
    }
  ],

  "permissions": [
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ]
}